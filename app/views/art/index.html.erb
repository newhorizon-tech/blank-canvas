
<div class="ui secondary menu">
  <a class="active item">
    Home
  </a>
  <a class="red item">
    Messages
  </a>
  <a class="green item">
    Friends
  </a>
  <div class=" yellow right menu">
    <div class="item">
      <div class="ui icon input">
        <input type="text" placeholder="Search...">
        <i class="search link icon"></i>
      </div>
    </div>
    <a class="ui item">
      Logout
    </a>
  </div>
</div>

<div class="ui cards center">
<% @art.each_with_index do |thing, i| %>
  <div class="ui card">
    <div class="image">
      <% path = (i+1).to_s + ".jpg" %>
      <%= image_tag path %>
   </div>
    <div class="content">
      <a class="header"><%= thing.title %></a>
      <div class="meta">
        <span class="date"><%= thing.creator %></span>
      </div>
      <div class="description">
        <!-- Description goes here -->
      </div>
    </div>
    <!-- <div class="extra content">
      <a>
        <i class="icon"></i>
      </a>
    </div> -->
  </div>
<% end %>
</div>


<div class="ui raised very padded text container segment">
  <div class="ui labeled input">
    <div class="ui label">http://</div>
    <input type="text" placeholder="medium.com">
  </div>
</div>


<div class="ui raised very padded text container segment">
  <div class="ui three doubling stackable cards">
    <div class="ui card">
      <div class="image">
        <div class="ui placeholder">
          <div class="square image"></div>
          <img src="" alt="">
        </div>
      </div>
      <div class="content">
        <div class="ui placeholder">
          <div class="header">
            <div class="very short line"></div>
            <div class="medium line"></div>
          </div>
          <div class="paragraph">
            <div class="short line"></div>
          </div>
        </div>
      </div>
      <div class="extra content">
        <div class="ui disabled primary button">Add</div>
        <div class="ui disabled button">Delete</div>
      </div>
    </div>
  </div>
</div>
